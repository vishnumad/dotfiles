configuration {
    show-icons: false;
    lines: 10;
    display-drun: "search";
    display-run: ">";
}
* {
    accent: #69748D;
    bckgrd: #292C37;
    select: #2F343F;
     
    foreground: @accent;
    foreground-alt: #ebebeb;
    background: @bckgrd;
    background-alt: @select;
    transparent: rgba(0, 0, 0, 0);
    urgentcolor: #e53714;

    font: "Work Sans 13";

    border-color: @background;
    separatorcolor: @foreground;
    background-color: #00000000;
}
 #window {
    background-color: rgba(41, 44, 55, 0.97);
    anchor: north;
    location: north;
    width: 100%;
    height: 100%;
    padding: 25%;
}
 #mainbox {
    spacing: 0px;
    children: [inputbar, message, sidebar, listview];
}
 #message {
    padding: 10 1% 10;
}
 #textbox {
    text-color: @background;
    background-color: @foreground;
}
 #listview {
    fixed-height: false;
    dynamic: true;
    scrollbar: false;
}
 #element {
    background-color: #00000000;
    border: 0;
    padding: 10px;
    text-color: @accent;
}
 #element.normal.urgent {
    text-color: @urgentcolor;
}
 #element.normal.active {
    text-color: @foreground;
}
 #element.selected.normal {
    background-color: @accent;
    text-color: #F2F2F5;
}
 #element.selected.urgent {
    background-color: @urgentcolor;
    text-color: #F2F2F5;
}
 #element.selected.active {
    background-color: @foreground;
    text-color: #F2F2F5;
}
 #button {
    text-color: @background;
}
 #button.selected {
    text-color: @foreground;
}
 #inputbar {
    spacing: 0px;
}
 #prompt {
    padding: 6px 9px;
    background-color: @accent;
    text-color: #F2F2F5;
}
 #entry {
    padding: 6px 10px;
    text-color: #F2F2F5;
}
